<!--pages/login/login.wxml-->
<view class="container">
	<view class="logo-container">
		<image src="../../assets/images/login_logo.png" mode="aspectFit" style="height:200rpx"></image>
	</view>
	<view class="input-container">
		<view class="input-mobile-container">
			<image src="../../assets/images/login_phone.png" style="width:50rpx;height:50rpx"></image>
			<input  type="text" placeholder="请输入手机号" bindinput="inputMobile" value="{{name}}"></input>
		</view>
		<view class="line" style="margin-top:20rpx"></view>

		<view class="input-password-and-code-container">
			<view class="input-password-container" wx:if="{{showPassword}}">
				<image src="../../assets/images/login_password.png" style="width:50rpx;height:50rpx"></image>
				<input type="password" placeholder="请输入密码"></input>
			</view>
			<view wx:else class="input-code-container">
				<image src="../../assets/images/login_code.png" style="width:50rpx;height:50rpx"></image>
				<input type="text" placeholder="请输入验证码"></input>
				<view class="input-code-container.button" bindtap="getCode">
					获取验证码
				</view>

			</view>

		</view>
		<view class="line" style="margin-top:20rpx"></view>
	</view>

	<view class="btn-container" bindtap="login">
		<button size="">确认登录</button>
	</view>


	<view wx:if="{{showPassword}}" class="check-container" bindtap="rememberPassword">
		<image src='{{imageurl}}' mode="aspectFit"></image>
		<view class="text-remember-password">记住密码</view>
	</view>

	<view class="login-way-container" bindtap="changLoginway">
		<view class="text-login-way">{{textLoginWay}}</view>
		<image src="../../assets/images/ic_right_arrow.png" mode="aspectFit"></image>
	</view>

</view>