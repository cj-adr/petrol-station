/* pages/record/list/record-list.wxss */

Page {
  background-color: #f8f8f8;
  padding-top: 20rpx;
}

.record-list-item {
  width: auto;
  height: 163rpx;
  background-color: white;
  margin-left: 18rpx;
  margin-right: 18rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 42rpx;
  padding-right: 42rpx;
}

.record-list-item-body {
  display: flex;
  flex-direction: row;
  margin-top: 12rpx;
  align-items: center;
}

.record-list-item-body-amount {
  flex: 1;
  color: #808080;
  font-size: 27rpx;
}

.record-list-item-header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.record-list-item-header-decoration {
  width: 8rpx;
  height: 33rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
  margin-right: 21rpx;
}

.record-list-item-header-title {
  font-size: 29rpx;
  color: #333333;
}

.record-list-item-body-btn {
  padding-left: 17rpx;
  padding-right: 17rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  background-color: #E7F3FF;
  color: #1890FF;
  font-size: 23rpx;  
  border-radius: 21rpx;
}

.record-list-item-body-divide{
  margin-left: 31rpx;
  margin-right: 31rpx;
  height: 21rpx;
  width: 4rpx;
  background-color: #979797;

}
